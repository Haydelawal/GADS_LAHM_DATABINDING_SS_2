<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BottomModalSheetFragment">


    <ImageView
        android:id="@+id/share_iv"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_share"
        android:layout_width="32dp"
        android:layout_height="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:layout_marginStart="24dp"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/share_iv"
        app:layout_constraintStart_toEndOf="@id/share_iv"
        app:layout_constraintTop_toTopOf="@id/share_iv"/>


    <ImageView
        android:id="@+id/edit_iv"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toStartOf="@id/share_iv"
        app:layout_constraintTop_toTopOf="@id/share_iv"
        android:src="@drawable/ic_edit"
        android:layout_width="32dp"
        android:layout_height="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_marginStart="24dp"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/edit_iv"
        app:layout_constraintStart_toEndOf="@id/edit_iv"
        app:layout_constraintTop_toTopOf="@id/edit_iv"/>

    <ImageView
        android:id="@+id/link_iv"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toStartOf="@id/edit_iv"
        app:layout_constraintTop_toTopOf="@id/edit_iv"
        android:src="@drawable/ic_link"
        android:layout_width="32dp"
        android:layout_height="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Link"
        android:layout_marginStart="24dp"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/link_iv"
        app:layout_constraintStart_toEndOf="@id/link_iv"
        app:layout_constraintTop_toTopOf="@id/link_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>