<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.gads_lp1dd_anac_mb_sa_co.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first" >
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
        <action
            android:id="@+id/action_firstFragment_to_bottomModalSheetFragment"
            app:destination="@id/bottomModalSheetFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.gads_lp1dd_anac_mb_sa_co.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second" >
        <action
            android:id="@+id/action_secondFragment_to_firstFragment"
            app:destination="@id/firstFragment" />
        <argument
            android:name="currentUser"
            app:argType="com.example.gads_lp1dd_anac_mb_sa_co.User" />
    </fragment>
    <dialog
        android:id="@+id/bottomModalSheetFragment"
        android:name="com.example.gads_lp1dd_anac_mb_sa_co.BottomModalSheetFragment"
        android:label="fragment_bottom_modal_sheet"
        tools:layout="@layout/fragment_bottom_modal_sheet" >
        <action
            android:id="@+id/action_bottomModalSheetFragment_to_firstFragment"
            app:destination="@id/firstFragment" />
    </dialog>
</navigation>